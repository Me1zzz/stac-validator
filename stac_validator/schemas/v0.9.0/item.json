{
    "$id": "item.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "additionalProperties": true,
    "allOf": [
        {
            "$ref": "#/definitions/core"
        }
    ],
    "definitions": {
        "asset": {
            "properties": {
                "description": {
                    "title": "Asset description",
                    "type": "string"
                },
                "href": {
                    "title": "Asset reference",
                    "type": "string"
                },
                "roles": {
                    "items": {
                        "type": "string"
                    },
                    "title": "Asset roles",
                    "type": "array"
                },
                "title": {
                    "title": "Asset title",
                    "type": "string"
                },
                "type": {
                    "title": "Asset type",
                    "type": "string"
                }
            },
            "required": [
                "href"
            ],
            "type": "object"
        },
        "common_metadata": {
            "allOf": [
                {
                    "$ref": "../v1.0.0/basics.json"
                },
                {
                    "$ref": "https://cdn.staclint.com/v0.9.0/datetimerange.json"
                },
                {
                    "$ref": "../v1.0.0/instrument.json"
                },
                {
                    "$ref": "../v1.0.0/licensing.json"
                },
                {
                    "$ref": "https://cdn.staclint.com/v0.9.0/metadata.json"
                },
                {
                    "$ref": "../v1.0.0/provider.json"
                }
            ]
        },
        "core": {
            "allOf": [
                {
                    "$ref": "https://geojson.org/schema/Feature.json"
                },
                {
                    "properties": {
                        "assets": {
                            "additionalProperties": {
                                "$ref": "#/definitions/asset"
                            },
                            "description": "Links to assets",
                            "title": "Asset links",
                            "type": "object"
                        },
                        "bbox": {
                            "items": {
                                "type": "number"
                            },
                            "minItems": 4,
                            "type": "array"
                        },
                        "collection": {
                            "description": "The ID of the STAC Collection this Item references to.",
                            "title": "Collection ID",
                            "type": "string"
                        },
                        "id": {
                            "description": "Provider item ID",
                            "title": "Provider ID",
                            "type": "string"
                        },
                        "links": {
                            "description": "Links to item relations",
                            "items": {
                                "$ref": "#/definitions/link"
                            },
                            "title": "Item links",
                            "type": "array"
                        },
                        "properties": {
                            "allOf": [
                                {
                                    "properties": {
                                        "datetime": {
                                            "description": "The searchable date/time of the assets, in UTC (Formatted in RFC 3339) ",
                                            "format": "date-time",
                                            "title": "Date and Time",
                                            "type": "string"
                                        }
                                    },
                                    "required": [
                                        "datetime"
                                    ],
                                    "type": "object"
                                },
                                {
                                    "$ref": "#/definitions/common_metadata"
                                }
                            ]
                        },
                        "stac_extensions": {
                            "items": {
                                "anyOf": [
                                    {
                                        "format": "uri",
                                        "title": "Reference to a JSON Schema",
                                        "type": "string"
                                    },
                                    {
                                        "enum": [
                                            "checksum",
                                            "commons",
                                            "datacube",
                                            "eo",
                                            "label",
                                            "pointcloud",
                                            "projection",
                                            "sar",
                                            "sat",
                                            "scientific",
                                            "version",
                                            "view"
                                        ],
                                        "title": "Reference to a core extension",
                                        "type": "string"
                                    }
                                ]
                            },
                            "title": "STAC extensions",
                            "type": "array",
                            "uniqueItems": true
                        },
                        "stac_version": {
                            "const": "0.9.0",
                            "title": "STAC version",
                            "type": "string"
                        }
                    },
                    "required": [
                        "stac_version",
                        "id",
                        "links",
                        "assets",
                        "bbox",
                        "properties"
                    ],
                    "type": "object"
                }
            ]
        },
        "link": {
            "properties": {
                "href": {
                    "title": "Link reference",
                    "type": "string"
                },
                "rel": {
                    "title": "Link relation type",
                    "type": "string"
                },
                "title": {
                    "title": "Link title",
                    "type": "string"
                },
                "type": {
                    "title": "Link type",
                    "type": "string"
                }
            },
            "required": [
                "rel",
                "href"
            ],
            "type": "object"
        }
    },
    "description": "This object represents the metadata for an item in a SpatioTemporal Asset Catalog.",
    "title": "STAC Item",
    "type": "object"
}