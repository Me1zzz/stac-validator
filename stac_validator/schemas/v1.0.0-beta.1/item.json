{
    "$id": "item.json#",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "additionalProperties": true,
    "allOf": [
        {
            "$ref": "#/definitions/core"
        }
    ],
    "definitions": {
        "asset": {
            "properties": {
                "description": {
                    "title": "Asset description",
                    "type": "string"
                },
                "href": {
                    "title": "Asset reference",
                    "type": "string"
                },
                "roles": {
                    "items": {
                        "type": "string"
                    },
                    "title": "Asset roles",
                    "type": "array"
                },
                "title": {
                    "title": "Asset title",
                    "type": "string"
                },
                "type": {
                    "title": "Asset type",
                    "type": "string"
                }
            },
            "required": [
                "href"
            ],
            "type": "object"
        },
        "assets": {
            "additionalProperties": {
                "$ref": "#/definitions/asset"
            },
            "description": "Links to assets",
            "title": "Asset links",
            "type": "object"
        },
        "common_metadata": {
            "allOf": [
                {
                    "$ref": "https://cdn.staclint.com/v1.0.0-beta.1/basics.json"
                },
                {
                    "$ref": "https://cdn.staclint.com/v1.0.0-beta.1/datetime.json"
                },
                {
                    "$ref": "https://cdn.staclint.com/v1.0.0-beta.1/instrument.json"
                },
                {
                    "$ref": "https://cdn.staclint.com/v1.0.0-beta.1/licensing.json"
                },
                {
                    "$ref": "https://cdn.staclint.com/v1.0.0-beta.1/provider.json"
                }
            ]
        },
        "core": {
            "allOf": [
                {
                    "$ref": "https://geojson.org/schema/Feature.json"
                },
                {
                    "properties": {
                        "assets": {
                            "$ref": "#/definitions/assets"
                        },
                        "bbox": {
                            "items": {
                                "type": "number"
                            },
                            "minItems": 4,
                            "type": "array"
                        },
                        "collection": {
                            "description": "The ID of the STAC Collection this Item references to.",
                            "title": "Collection ID",
                            "type": "string"
                        },
                        "id": {
                            "description": "Provider item ID",
                            "title": "Provider ID",
                            "type": "string"
                        },
                        "links": {
                            "description": "Links to item relations",
                            "items": {
                                "$ref": "#/definitions/link"
                            },
                            "title": "Item links",
                            "type": "array"
                        },
                        "properties": {
                            "$ref": "#/definitions/common_metadata"
                        },
                        "stac_extensions": {
                            "items": {
                                "anyOf": [
                                    {
                                        "format": "uri",
                                        "title": "Reference to a JSON Schema",
                                        "type": "string"
                                    },
                                    {
                                        "title": "Reference to a core extension",
                                        "type": "string"
                                    }
                                ]
                            },
                            "title": "STAC extensions",
                            "type": "array",
                            "uniqueItems": true
                        },
                        "stac_version": {
                            "const": "1.0.0-beta.1",
                            "title": "STAC version",
                            "type": "string"
                        }
                    },
                    "required": [
                        "stac_version",
                        "id",
                        "links",
                        "assets",
                        "bbox",
                        "properties"
                    ],
                    "type": "object"
                }
            ]
        },
        "link": {
            "properties": {
                "created": {
                    "$ref": "https://cdn.staclint.com/v1.0.0-beta.1/datetime.json#definitions/created"
                },
                "href": {
                    "title": "Link reference",
                    "type": "string"
                },
                "rel": {
                    "title": "Link relation type",
                    "type": "string"
                },
                "title": {
                    "title": "Link title",
                    "type": "string"
                },
                "type": {
                    "title": "Link type",
                    "type": "string"
                },
                "updated": {
                    "$ref": "https://cdn.staclint.com/v1.0.0-beta.1/datetime.json#definitions/updated"
                }
            },
            "required": [
                "rel",
                "href"
            ],
            "type": "object"
        }
    },
    "description": "This object represents the metadata for an item in a SpatioTemporal Asset Catalog.",
    "title": "STAC Item",
    "type": "object"
}